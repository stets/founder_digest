<%= render partial: "shared/heading", locals: {title: 'Write an Update', tagline: 'Share the latest news from your company.'} %>

<div class="max-w-3xl mx-auto">
    <%= form_for @stake_holder_update do |form| %>
      <div class="field">
        <%= form.rich_text_area :content %>
      </div>
    

    <div class="mt-2 text-left">
        <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-brand-orange py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-brand-orange-dark focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Share</button>
    </div>
    <% end %>
</div>


